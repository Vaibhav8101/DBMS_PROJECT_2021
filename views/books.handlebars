{{#if rows}}
{{#each rows}}
<div class="book read">
    <div class="cover">
        {{#if this.image}}
        <img src="img/{{this.ISBN}}.jpg" alt="">
        {{else}}
        <img src="img/temp.png" alt="">
        {{/if}}
    </div>
    <div class="description">
        <p>
            <a class="title" href="/bookdetails/{{this.ISBN}}" style="color:black; text-decoration: none; overflow: hidden;">{{this.title}}</a>
            <br>
            <span class="author">{{this.author}}</span>
        </p>
    </div>
</div>
{{/each}}
{{else}}
<p>No books available.</p>
{{/if}}

</div>
